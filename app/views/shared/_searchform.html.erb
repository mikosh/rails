<div id="search-form">
    <% form_tag(search_path, :method => :get) do %>
    <div id="universal_search_input">
        <%=text_field_tag :search, params[:search], :style => "width:160px;", :onFocus => "addClassName('input-term-focus', this);", :onBlur=>"removeClassName('input-term-focus', this);", :class => "input-term" %>
    </div>
    <div id="universal_search_submit">
        <%=image_submit_tag("/images/search_button.png", :title=>"Search Threesixty", :id=>"search", :name => nil ) %>
    </div>
    <% end %>
</div>
